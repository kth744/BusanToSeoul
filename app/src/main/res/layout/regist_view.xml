<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/regist_title"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_title"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/regist_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:minLines="20"
        android:maxLines="30"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:hint="내용을 입력하세요" />

    <RelativeLayout
        android:id="@+id/regist_view_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/regist_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regist"
            android:onClick="onClickRegistSave"/>

        <Button
            android:id="@+id/regist_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:onClick="onClickRegistCancel"/>

    </RelativeLayout>


</LinearLayout>